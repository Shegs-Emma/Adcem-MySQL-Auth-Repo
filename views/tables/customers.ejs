<% include ../partials/header %>
<div class="container">
    <div class="row">
		<header class="jumbotron jum-style">
			<h2>
				INSERT INTO CUSTOMER TABLE
			</h2>
			<p>
				We currently have <%= count%> <%= cus%> in the Database.....
			</p>
		</header>
        
        <div class="form-style cent">
            <form action="/add_cus" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Hospital Name" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="addr" placeholder="Hospital Address">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="region" placeholder="Region" required="required">
                </div>
				<div class="form-group">
                    <input class="form-control" type="tel" name="phone" placeholder="Phone Number">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/show" class="btn btn-warning">Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>