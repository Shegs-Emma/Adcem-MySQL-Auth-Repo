<% include ../partials/header %>
<div class="container" id="machines">
    <div class="row">
		<header class="jumbotron jum-style">
			<h2>
				INSERT INTO MACHINE TABLE
			</h2>
			<p>
				We currently have <%= count %> <%= mac %> in the Database.....
			</p>
		</header>
        
        <div class="form-style cent">
            <form action="/add_mac" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" name="slno" placeholder="Serial Number" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dtype" placeholder="Device Type" required="required">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="ec" placeholder="EC Code" required="required">
                </div>
                <div class="form-group">
					<label for="inst_date" class="mach_font">Installation Date</label>
                    <input class="form-control" type="date" name="inst_date" required="required">
                </div>
				<div class="form-group">
					<label for="warr_end" class="mach_font">Warranty End Date</label>
                    <input class="form-control" type="date" name="warr_end" placeholder="Warranty End" required="required">
                </div>
				<div class="form-group">
					<label for="ppm" class="mach_font">PPM Date</label>
                    <input class="form-control" type="date" name="ppm" placeholder="PPM date" required="required">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="op_hrs" placeholder="Operating Hours" required="required">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="mac_stat" placeholder="Machine Status" required="required">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="cus_id" placeholder="Customer Id" required="required">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/show" class="btn btn-warning">Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>